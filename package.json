{
  "name": "rune-forge",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:server": "bun run --filter @rune-forge/server dev",
    "dev:client": "bun run --filter @rune-forge/client dev",
    "build": "bun run build:shared && bun run build:simulation && bun run build:server && bun run build:client",
    "build:shared": "bun run --filter @rune-forge/shared build",
    "build:simulation": "bun run --filter @rune-forge/simulation build",
    "build:server": "bun run --filter @rune-forge/server build",
    "build:client": "bun run --filter @rune-forge/client build",
    "test": "bun run --filter '*' test",
    "test:simulation": "bun run --filter @rune-forge/simulation test",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf packages/*/dist node_modules/.cache",
    "docker:build": "docker build -t rune-forge:latest -f docker/Dockerfile .",
    "docker:run": "docker run -p 3000:3000 rune-forge:latest"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.51.0"
  },
  "packageManager": "pnpm@9.15.1",
  "engines": {
    "node": ">=22.0.0"
  }
}
